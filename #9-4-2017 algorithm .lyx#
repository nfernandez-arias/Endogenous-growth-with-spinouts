\begin_body

\begin_layout Enumerate
Guess 
\begin_inset Formula $L^{F}$
\end_inset

.
 
\end_layout

\begin_deeper
\begin_layout Enumerate
Guess 
\begin_inset Formula $g$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Enumerate
Guess 
\begin_inset Formula $w(q,m),F(q)$
\end_inset

.
 Compute 
\begin_inset Formula $\pi(q)$
\end_inset

 from 
\begin_inset Formula $L^{F}$
\end_inset

.
 Solve for optimal policies and value functions:
\end_layout

\begin_deeper
\begin_layout Enumerate

\series bold
Incumbents: 
\series default
Solve for 
\begin_inset Formula $A(q,m),B(q)$
\end_inset

 and policies 
\begin_inset Formula $z_{I}^{A}(q,m),z_{I}^{B}(q)$
\end_inset

 using Moll's iterative method.
\end_layout

\begin_deeper
\begin_layout Enumerate
Will take as given innovation intensity by entrants, 
\begin_inset Formula $\overline{z}_{E}(q,m)=\xi\min(m,F(q))$
\end_inset

 (and hence 
\begin_inset Formula $\overline{z}_{E}^{0}(q)=\xi F(q)$
\end_inset

).
 
\end_layout

\begin_deeper
\begin_layout Enumerate
HJBs are
\begin_inset Formula 
\begin{eqnarray*}
(r+\theta-g)A(q,m) & = & \max_{z}\pi(q)+\theta B(q)\\
 &  & +\chi_{I}z\phi(z+\overline{z}_{E}(q,m))\big(A((1+\lambda)q,0)-A(q,m)\big)\\
 &  & -\chi_{E}\overline{z}_{E}\phi(z+\overline{z}_{E}(q,m))A(q,m)\\
 &  & +\nu(\overline{z}_{E}(q,m)+z)A_{m}(q,m)\\
 &  & -gqA_{q}(q,m)
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula 
\begin{eqnarray*}
(r+\theta-g)B(q) & = & \max_{z}\pi(q)+\chi_{I}z\phi(z+\xi F(q))\big(A((1+\lambda)q,0)-B(q)\big)\\
 &  & -\chi_{E}\xi F(q)\phi(z+\xi F(q))B(q)\\
 &  & -gqB'(q)
\end{eqnarray*}

\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Enumerate

\series bold
Entrants: 
\series default
Solve for 
\begin_inset Formula $W^{NC}(q,m),W^{F}(q,m)$
\end_inset

 and 
\begin_inset Formula $F^{*}(q)$
\end_inset

 using Moll's iterative method.
 
\end_layout

\begin_deeper
\begin_layout Enumerate
Define 
\begin_inset Formula $\tau(q,m)=(\chi_{I}z_{I}(q,m)+\chi_{E}\overline{z}_{E}(q,m))\phi(z_{I}(q,m)+\overline{z}_{E}(q,m))$
\end_inset

 and 
\begin_inset Formula $L(q,m)=z_{I}(q,m)+\overline{z}_{E}(q,m)$
\end_inset

.
\end_layout

\begin_layout Enumerate
HJBs are 
\begin_inset Formula 
\begin{eqnarray*}
(r+\theta+\tau(q,m)-g)W^{F}(q,m) & = & \max_{z}\chi_{E}z\phi(z_{I}(q,m)+\overline{z}_{E}(q,m))\big(A((1+\lambda)q,0)-W^{F}(q,m)\big)\\
 &  & -w(q,m)z-gqW_{q}^{F}(q,m)+\nu L(q,m)W_{m}^{F}(q,m)
\end{eqnarray*}

\end_inset

and 
\begin_inset Formula 
\begin{eqnarray*}
(r+\theta+\tau(q,m)-g+v)W^{NC}(q,m) & = & vW^{F}(q,m)-gqW_{q}^{NC}(q,m)\\
 &  & +\nu L(q,m)W_{m}^{NC}(q,m)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Enumerate
Really, it comes down to setting 
\begin_inset Formula 
\[
F^{*}(q)=\sup\{m:\chi_{E}\phi(z_{I}(q,m)+\overline{z}_{E}(q,m))(A((1+\lambda)q,0)-W^{F}(q,m))\ge w(q,m)\}
\]

\end_inset


\end_layout

\begin_layout Enumerate
As 
\begin_inset Formula $m$
\end_inset

 increases, what we know for sure is that 
\begin_inset Formula $\overline{z}_{E}(q,m)$
\end_inset

 increases, as 
\begin_inset Formula $\overline{}$
\end_inset


\end_layout

\end_deeper
\end_deeper
\begin_layout Enumerate
Check consistency
\end_layout

\begin_deeper
\begin_layout Enumerate
Check 
\begin_inset Formula $w(q,m)+\nu W^{NC}(q,m)=w$
\end_inset

.
\end_layout

\begin_layout Enumerate
Check 
\begin_inset Formula $F^{*}(q)=F(q)$
\end_inset


\end_layout

\end_deeper
\end_deeper
\end_deeper
\end_body
